@model trial7.Models.QueryHandler
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet2" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>



    <link href="~/css/shared.css" rel="stylesheet" type="text/css" />
    <link href="~/css/home.css" rel="stylesheet" type="text/css" />


    <link href="~/css/Hover.css" rel="stylesheet" />
    <!--<link href="~/css/user_reg.css" rel="stylesheet" />-->
    <script src="~/Scripts/main.js"></script>


</head>
<body>
    <div style="text-align:center">
        <img style="image-resolution:from-image;image-rendering:auto;width:1024px;height:300px" src="~/images/textile.jpg" />
        <h2 style="font-weight:bold;margin-top:-50px;color:white;">TEXTILE EXPERTS</h2>
    </div>

    <br />
    <div class="row">
        @{
            string text = "Showing " + ViewBag.textile + " Textile Experts";
        }
        <div class="col-md-4">
            <h4 style="font-weight:bold;font-size:16px;padding-left:10px;">@text</h4>
            <hr />
        </div>
        <div class="col-md-4"></div>
    </div>
    <br />


    <div class="row">
        @for (int i = 0; i < Model.ExpertList.Count; i++)
        {
            <div class="col-md-4">
                <div class="card-body">
                    <div class="hovereffect">
                        <img src="@Url.Content(Model.ExpertList[i].ProfileImage)" />
                        <div style="width: 100%; height: 300px; position: absolute; overflow: hidden;top: 0;left: 0;padding: 50px 20px;">
                            <p>
                                @{
                                    string name = @Model.ExpertList[i].FirstName + " " + @Model.ExpertList[i].LastName;
                                }
                                <label style="color:white">@name</label><br>

                            </p>
                            <h2></h2>
                            <p>
                                <label style="color:white"></label><br>
                            </p>
                            <p style="font-size:13px">
                                @Model.ExpertiseList[i].ExpertiseSectors
                            </p>
                        </div>
                    </div>
                    <div class="title"><a href=@Url.Action("ViewExpert", "Browse", new {@id = Model.ExpertList[i].Id})>@name</a></div>

                </div>
            </div>
        }

    </div>
</body>
</html>