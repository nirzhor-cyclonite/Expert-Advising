@model trial7.Models.QueryHandler
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">


    <title>Expert Advising</title>

    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet2" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>


    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

   <link href="~/css/Expert_Details.css" rel="stylesheet" />

    <!--<link href="~/css/user_reg.css" rel="stylesheet" />-->
    <script src="~/Scripts/main.js"></script>
    <style>
        .container2 {
            padding: 100px;
        }

        #sidebox {
            margin-left: 50px;
        }
    </style>

</head>
<body>
    <!--razor syntax e style ta direct likhte hoe-->



    <div class="container2">
        <div class="row">

            <div class="col-md-2 image">
                <img style="width:150px;height:150px; border-radius:50%;" src="@Url.Content(Model.ExpertList[0].ProfileImage)" />
            </div>

            <div class="col-md-6 description">
                <div class="row">
                    @{
                        string name = @Model.ExpertList[0].FirstName + " " + @Model.ExpertList[0].LastName;
                    }
                    <div class="col-md-12">

                        <h1 data-href="/tonydinitto"><span class="status offline"></span>@name</h1>
                        <p style="font-size:15px">
                            @Model.ExpertiseList[0].ExpertiseSectors
                        </p>

                        <p class="bio" data-clamp="3" style="overflow: hidden; text-overflow: ellipsis; -webkit-box-orient: vertical; display: -webkit-box; -webkit-line-clamp: 3;">
                            @Model.ExpertiseList[0].Bio
                        </p>



                    </div>

                    <div class="col-md-4">
                        <p style="font-size:15px;"><i class="fa fa-phone" aria-hidden="true" style="margin-right:5px;font-size:15px;"></i>@Model.Session_Count </p>

                    </div>

                    <div class="col-md-4">
                        <p style="font-size:15px;"><i class="fa fa-star" aria-hidden="true" style="margin-right:5px;font-size:15px;"></i> @String.Format("{0:0.00}", Model.Rating)</p>

                    </div>

                    <div class="col-md-4">
                        <p style="font-size:15px;"><i class="fa fa-comment" aria-hidden="true" style="margin-right:5px;font-size:15px;"></i> @Model.ReviewList.Count</p>

                    </div>


                </div>

            </div>




            <div class="col-md-3 buttonBox" id="sidebox">
                <div class="row">
                    <div class="col-md-12">
                        <p style="font-weight:bolder; font-size:20px;">@Model.ExpertiseList[0].Fee <span style="font-weight:100"> / min</span></p>

                    </div>

                    <div class="col-md-12">
                        <button class="btn btn-success" id="button">
                            <a href=@Url.Action("Booking","Booking", new {@id = Model.ExpertList[0].Id}) style="text-decoration:none; color:black">Request A Call</a>
                        </button>
                    </div>
                    <div class="col-md-12">
                        <button id="button" class="btn btn-light">Send Message</button>
                    </div>
                    <div class="col-md-12">

                        @if (Model.ContentList.Count > 0)
                        {
                             <button id="button" class="btn btn-light">
                                <a href=@Url.Action("ViewContent", "Browse", new { @id = Model.ContentList[0].ContentId }) style="text-decoration:none; color:black">Contents</a>
                             </button>
                        }
                                
                        </div>
                    <div class="col-md-12">
                        <p></p>
                        <!--rating baki-->
                    </div>
                </div>
            </div>


            <div class="col-md-10">
                <!--feedback section-->

                <h1 style="color:darkblue;margin-left:20px;font-weight:bold;">Feedback</h1>
                @for (int i = 0; i < Model.ReviewList.Count; i++)
                {
                    <div class="quote" style="width:1020px;">
                        <p style="font-weight:400;font-size:12px;">
                            <img src="~/images/head.jpg" class="rounded-circle" style="width:20px;height:20px">

                            @Model.ReviewList[i].UserReview
                        </p>


                    </div>
                }
            </div>


        </div>
    </div>
</body>
</html>