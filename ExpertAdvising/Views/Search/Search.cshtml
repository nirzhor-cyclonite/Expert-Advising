@model trial7.Models.QueryHandler
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!DOCTYPE html>
    <html lang="en">
    <head>


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>



        <style>

            .container {
                margin-top: 40px;
            }

            .firstSection {
                width: 150px;
                height: 150px;
            }

                .firstSection img {
                    width: 120px;
                    height: 120px;
                    border-radius: 50%;
                }

            .thirdSection {
                text-align: center;
            }

                .thirdSection .price, .thirdSection .callButton {
                    padding-bottom: 15px;
                }

                    .thirdSection .callButton button {
                        width: 200px;
                    }

            .border {
                margin-top: 30px;
                border-bottom: 2px solid #6f6f6f;
            }
        </style>
    </head>

    <body style="">

        <div class="container">
            @if (Model.ExpertList.Count == 0)
            {
                <h2>No Results Found</h2>
            }
            else
            {
                for (int i = 0; i < Model.ExpertList.Count && i < Model.ExpertiseList.Count; i++)
                {
                    <br />
                    <div class="row">


                        <div class="col-md-3 firstSection">
                            <img src="@Url.Content(Model.ExpertList[i].ProfileImage)" />
                        </div>
                        <div class="col-md-6 secondSection">
                            
                            <h2>
                                <a href=@Url.Action("ViewExpert","Browse", new {@id = Model.ExpertList[i].Id})>@Model.ExpertList[i].FirstName</a>
                            </h2>
                            <p>
                                @Model.ExpertiseList[i].Bio
                            </p>

                        </div>

                        <div class="col-md-3">

                            <div class="row thirdSection">

                                <div class="col-md-12 price">
                                    <div style="font-weight:bold">@Model.ExpertiseList[i].Fee</div>
                                    <div>per minute</div>
                                </div>

                                <div class="col-md-12 callButton">
                                    <button class="btn btn-success" id="button">
                                        <a href=@Url.Action("Booking","Booking", new {@id = Model.ExpertList[i].Id}) style="text-decoration:none; color:black">Request A Call</a>
                                    </button>
                                </div>

                                <div class="col-md-12 rating">

                                    <div class="row">

                                        <div class="col-sm-4">
                                            <i class="fa fa-star"> @String.Format("{0:0.00}", Model.AttributeList[i].Rating) </i>
                                        </div>
                                        <div class="col-sm-4">
                                            <i class="fa fa-phone"> @Model.AttributeList[i].SessionCount</i>
                                        </div>
                                        <div class="col-sm-4">
                                            <i class="fa fa-comments"> @Model.AttributeList[i].ReviewCount</i>
                                        </div>

                                    </div>


                                </div>

                            </div>
                        </div>

                    </div>

                    <hr />
                }
            }



        </div>

        <div class="b" style="margin-bottom:500px;">

        </div>
   
    </body>
</html>
    
